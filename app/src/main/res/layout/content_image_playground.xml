<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hentaiuncle.vision.activitys.ImagePlaygroundActivity"
    tools:showIn="@layout/activity_image_playground">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input" />
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal" />
        <android.support.design.widget.TabItem

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/output" />

    </android.support.design.widget.TabLayout>


    <com.hentaiuncle.vision.other.NoScrollViewPager
        android:id="@+id/img_pg_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


    </com.hentaiuncle.vision.other.NoScrollViewPager>
</LinearLayout>

